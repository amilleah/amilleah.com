---
import Layout from '../layouts/Layout.astro';
import Tarot from '../components/Tarot.astro';
import EtcItem from '../components/EtcItem.astro';
---

<Layout title="etc." description="projects and code artifacts.">
  <main class="space-y-6">
    <header class="space-y-2">
      <h1 class="text-lg font-medium tracking-tight">etc.</h1>
      <p class="text-sm text-zinc-400">
        digital tools, artifacts, and ports of existing projects.
      </p>
    </header>

    <div class="h-px w-16 bg-zinc-200 dark:bg-zinc-800"></div>

    <section class="flex flex-col">
      <EtcItem 
        title="daily card from"
        href="https://github.com/amilleah/tarot" 
        linkText="amilleah/tarot"
      >
        <div slot="visual">
          <Tarot />
        </div>
        <p>
          Rider-Waite-Smith tarot deck made in ANSI with <code class="text-xs bg-zinc-100 dark:bg-zinc-800 px-1 rounded">chafa</code>.
          <br />
          TUI made in Go with <code class="text-xs bg-zinc-100 dark:bg-zinc-800 px-1 rounded">bubbletea</code>.
        </p>
      </EtcItem>
      <EtcItem 
        title="poetry with"
        href="/lexicon" 
        linkText="lexicon"
      >
        <div slot="visual">
          <a href="/lexicon" class="inline-block">
            <img
              src="/images/clippings/still-life-with-tornado/to%20be%20who%20we%20are..png"
              alt="to be who we are"
              loading="lazy"
            />
          </a>
        </div>
        <p>
          React-based collage poetry engine. Find the words or add your own.
        </p>
      </EtcItem>
    </section>
  </main>
</Layout>
